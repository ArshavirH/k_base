<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds" packagingData="true">
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
  <springProperty scope="context" name="springAppName" source="spring.application.name"
    defaultValue="kbase"/>

  <property name="CONSOLE_LOG_PATTERN"
    value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(%5p){level} %clr([%15.15t]){magenta} %clr(${PID:-}){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wEx"/>

  <contextName>${springAppName}</contextName>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>${CONSOLE_LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <logger name="org.springframework" level="${SPRING_LOG_LEVEL:-INFO}"/>
  <logger name="org.hibernate.SQL" level="${HIBERNATE_SQL_LOG_LEVEL:-WARN}"/>
  <logger name="org.hibernate.orm.jdbc.bind" level="WARN"/>

  <root level="${ROOT_LOG_LEVEL:-INFO}">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
